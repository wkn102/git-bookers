<header>
  <h1>Books</h1>
</header>


<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
     <tr>
       <% @books.each do |book| %>
       <td class= "book-title">
         <%= book.title %>
       </td>
       <td class= "book-body">
         <%= book.body %>
       </td>
          <td>     
              <%= link_to "Show", book_path(book.id) %>
          </td>
          <td>
              <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td>
              <%= link_to "Destroy", book_path(book.id), method: :DELETE %>
          </td>
     </tr>
      <% end %>
</table>
<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<!-- form_with部分 -->
<%= form_with model: @book , local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="box"></div>
  <%= f.submit 'Create Book' %>
<% end %>

